@model WebAppTuotteetMVC.ViewModels.KategoriaMyynnitVM

@{
    ViewBag.Title = "Kategoriamyynnit";
}

<script ssrc="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.6.1/chart.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>


@section scripts {
    <script type="text/javascript">

        var labelTexts = [@Html.Raw(ViewBag.kategoriaNimi)];
        console.log(labelTexts);
        var dataValues = [@ViewBag.kategoriaMyynnit];
        console.log(dataValues);

        var ctx = document.getElementById('barcanvas').getContext('2d');
        var barcanvas = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: labelTexts,
                datasets: [{
                    //axis: 'y',
                    label: 'Myynnit Kategoriakohtaisesti',
                    data: dataValues,
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(255, 159, 64, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                //indexAxis: 'y',
                scales: {

                    //x: {
                    //    stacked: true
                    //},
                    //y: {
                    //    stacked: true
                    //},

                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        });


        var labelTexts2 = [@Html.Raw(ViewBag.topNimi)];
        console.log(labelTexts2);
        var dataValues2 = [@ViewBag.topMyynnit];
        console.log(dataValues2);

        var ctx2 = document.getElementById('barcanvas2').getContext('2d');
        var barcanvas2 = new Chart(ctx2, {
            type: 'doughnut',
            data: {
                labels: labelTexts2,
                datasets: [{
                    //axis: 'y',
                    label: 'Top Myynnit',
                    data: dataValues2,
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(255, 159, 64, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                //indexAxis: 'y',
                scales: {

                    //x: {
                    //    stacked: true
                    //},
                    //y: {
                    //    stacked: true
                    //},

                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        });

    </script>

}

<br />
<br />

<div class="container-fluid">
    <div class="row" padding="10%">
        <h2>Myynnit Kategoriakohtaisesti</h2>
        <br /><br />
        <div class="col-sm-6">
            <canvas id="barcanvas"></canvas>
        </div>

        <h2>Top Myynnit</h2>
        <br /><br />
        <div class="col-sm-6">
            <canvas id="barcanvas2" width="400" height="400"></canvas>
        </div>

    </div>
    <div style="text-align: center">
        @*Tiedot on haettu Northwind tietokannasta!*@
    </div>
</div>
